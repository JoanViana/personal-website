{% trans_default_domain 'FOSUserBundle' %}
	<div class="main container">
		<div class="row well">
			<div class="col-md-6 col-md-offset-3">
				<div class="page-header">
					<h2>{{ 'user.pass.header'|trans({}, 'DWSBundle') }}</h2>
				</div>
                    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                    <fieldset>
                        <div class="form-group">
                            {{ form_label(form.current_password) }}
                            {{ form_widget(form.current_password, { 'attr' : {'class' : 'form-control'} }) }}
                            <span class="text-danger">{{ form_errors(form.current_password) }}</span>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.first) }}
                            {{ form_widget(form.plainPassword.first, { 'attr' : {'class' : 'form-control'} }) }}
                            <span class="text-danger">{{ form_errors(form.plainPassword.first) }}</span>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.plainPassword.second) }}
                            {{ form_widget(form.plainPassword.second, { 'attr' : {'class' : 'form-control'} }) }}
                            <span class="text-danger">{{ form_errors(form.plainPassword.second) }}</span>
                        </div>
        				</fieldset>

				<div class="row">
					<div class="col-sm-12">
					    <p>
					        <input type="submit" class="btn btn-success" value="{{ 'change_password.submit'|trans }}" />
					    </p> 

			                  {{ form_end(form) }}
                	</div>
				</div>

            </div>
        </div>
    </div>

