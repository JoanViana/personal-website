{% extends "FOSUserBundle::layout.html.twig" %}
{% block title %}DWS - {{ 'user.login.title'|trans({}, 'DWSBundle') }}{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
            {% if error %}
                <div class="alert alert-danger alert-dismissible" role="alert">
	  	        	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  		        <strong>{{ 'flash.error'|trans({}, 'DWSBundle') }}</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
		         </div> 
            {% endif %}
	<div class="main container">
		<div class="row well">
			<div class="col-md-4 col-md-offset-5">
				<div class="page-header">
					<h2>{{ 'user.login.header'|trans({}, 'DWSBundle') }}</h2>
				</div>


            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <fieldset>
                        
                        {% block fos_user_content_login %}
                            <div class="form-group">
                                <label class="col-md-3 col-md-pull-4" for="username">{{ 'form.email'|trans({}, 'DWSBundle') }}</label>
                                <input class="col-md-9 col-md-pull-3" type="email" id="username" name="_username" placeholder= {{ 'form.username'|trans({}, 'DWSBundle') }} value="{{ last_username }}" required="required" />
                            </div>
                            
                            <sup>
                                <a href="{{ path('fos_user_security_login_username') }}" id="_submitByUsername" />{{ 'link.login.username'|trans({}, 'DWSBundle') }} </a>
                            </sup>
                        {% endblock %}
                        
                        <div class="form-group">
                            <label class="col-md-3 col-md-pull-4" for="password">{{ 'security.login.password'|trans }}</label>
                            <input class="col-md-9 col-md-pull-3" type="password" id="password" name="_password"  placeholder= {{ 'form.password'|trans({}, 'DWSBundle') }}  required="required" />
                        </div>
                        <div class="form-group">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>
       				</fieldset>

				<div class="row">
					<div class="col-sm-offset-2 col-sm-10 col-md-9 col-md-pull-2">
					    <p>
                            <input href="{{ path('fos_user_security_login') }}" class="btn btn-info" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
					    </p> 
	                </div>
				</div>
            </form>
        </div>
    </div>
</div>

{% endblock fos_user_content %}
